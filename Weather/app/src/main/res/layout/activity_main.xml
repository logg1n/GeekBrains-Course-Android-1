<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:layout_marginVertical="8dp"
    android:layout_marginHorizontal="20dp"
    >
    <TextView
        android:id="@+id/title_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="26sp"
      />

    <TextView
        android:id="@+id/town_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/week_day"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_text_view"
        android:layout_marginTop="16dp"
        android:textSize="24sp"
        />

    <TextView
        android:id="@+id/day_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/day"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/town_text_view"
        android:layout_marginTop="16dp"
        android:textSize="20sp"
        />

    <TextView
        android:id="@+id/night_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/night"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/day_text_view"
        android:layout_marginTop="16dp"
        android:textSize="20sp"
        />

    <TextView
        android:id="@+id/humidity_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/humidity"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/night_text_view"
        android:layout_marginTop="16dp"
        android:textSize="20sp"
        />

    <TextView
        android:id="@+id/wind_speed_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/wind_speed"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/humidity_text_view"
        android:layout_marginTop="16dp"
        android:textSize="20sp"
        />

    <TextView
        android:id="@+id/pressure_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pressure"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/wind_speed_text_view"
        android:layout_marginTop="16dp"
        android:textSize="20sp"
        />

    <TextView
        android:id="@+id/day_val_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="15 C"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@id/day_text_view"
        android:textSize="20sp"
        />

    <TextView
        android:id="@+id/night_val_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5 C"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@id/night_text_view"
        android:textSize="20sp"
        />

    <TextView
        android:id="@+id/humidity_val_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="30 %"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@id/humidity_text_view"
        android:textSize="20sp"
        />

    <TextView
        android:id="@+id/wind_val_speed_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2 м/с"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@id/wind_speed_text_view"
        android:textSize="20sp"
        />

    <TextView
        android:id="@+id/pressure_val_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1033 гПа"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@id/pressure_text_view"
        android:textSize="20sp"
        />

</android.support.constraint.ConstraintLayout>